<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:fitsSystemWindows="true">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Scenic Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button - TOP LEFT -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Back"
        android:elevation="8dp"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Pet Display -->
    <ImageView
        android:id="@+id/petDisplay"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/emotion_neutral"
        android:contentDescription="Virtual Companion"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mood Indicator Circle -->
    <View
        android:id="@+id/moodIndicator"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_pulse"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="@id/petDisplay"
        app:layout_constraintBottom_toBottomOf="@id/petDisplay"
        app:layout_constraintStart_toStartOf="@id/petDisplay"
        app:layout_constraintEnd_toEndOf="@id/petDisplay" />

    <!-- Quest Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/questInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#E6FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/petDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Mood Badge -->
            <TextView
                android:id="@+id/moodBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CALM"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/mood_badge_bg"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:fontFamily="@font/nunito_bold" />

            <!-- Quest Title -->
            <TextView
                android:id="@+id/questTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Quest Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center" />

            <!-- Quest Description -->
            <TextView
                android:id="@+id/questDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Quest description goes here"
                android:textSize="16sp"
                android:textColor="#4A5568"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#E2E8F0" />

            <!-- Timer Display -->
            <TextView
                android:id="@+id/timerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05:00"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center" />

            <!-- Instruction Text -->
            <TextView
                android:id="@+id/instructionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Focus on your task..."
                android:textSize="14sp"
                android:textColor="#718096"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:text="In Progress..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_bold"
        android:enabled="false"
        app:cornerRadius="32dp"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>