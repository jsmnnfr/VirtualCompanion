<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Icon - Top Left -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:contentDescription="Settings"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Coins Display - Top Right -->
    <LinearLayout
        android:id="@+id/coinsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/coin_display_bg"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="150"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Coins"
            android:src="@drawable/ic_coin" />

    </LinearLayout>

    <!-- App Title - Responsive -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ECHO"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:fontFamily="@font/nunito_extrabold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:elevation="8dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quests Container - GLASS EFFECT WITHOUT VISIBLE BOX -->
    <LinearLayout
        android:id="@+id/questsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/glass_button"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header Text - Responsive -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nunito_bold"
            android:lineSpacingExtra="2dp"
            android:shadowColor="#DD000000"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="8"
            android:text="Find balance with these quests!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="16sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeStepGranularity="1sp" />

        <!-- Empty State Message - ADDED -->
        <TextView
            android:id="@+id/emptyStateMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="No quests available"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_bold"
            android:lineSpacingExtra="4dp"
            android:textAlignment="center"
            android:shadowColor="#DD000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Quests List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <!-- Bottom Navigation - Always at bottom -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:background="@drawable/nav_background"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_quests"
            android:contentDescription="Quests"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/navCustomize"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_customize"
            android:contentDescription="Customize"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>